@model IEnumerable<Book>


<h1>List of Books</h1>
<div class="row">
    <div class="col-md-5">
        <a asp-action="create" asp-controller="Books" class="btn btn-outline-info">ADD NEW</a>
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        @if (Model.Count() == 0)
        {
            <h3>
                No Books
            </h3>
        }
        else
        {
            <ul>
                @foreach (var book in Model)
                {
                    <li class="list-group-item">
                        <a asp-action="Details" asp-route-id="@book.Id" asp-controller="Books">@book.BookName</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>